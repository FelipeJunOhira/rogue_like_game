{
  "name": "rogue_like_game",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "bower": "bower",
    "build": "npm run build:jade && npm run build:sass && npm run build:js",
    "build:jade": "npm run build:jade:templates && npm run build:jade:main",
    "build:jade:main": "jade -o app -P src/main.jade",
    "build:jade:templates": "jade -o app/templates -P src/templates",
    "build:sass": "node-sass -o app/styles src/styles",
    "build:js": "browserify src/js/init.js > app/bundle.js",
    "prewatch": "npm run build",
    "watch": "npm run watch:jade && npm run watch:sass && npm run watch:js",
    "watch:jade": "npm run watch:jade:main && npm run watch:jade:templates",
    "watch:jade:main": "jade -o app -P -w src/main.jade",
    "watch:jade:templates": "jade -o app/templates -P -w src/templates",
    "watch:sass": "node-sass -o app/styles -w src/styles",
    "watch:js": "watchify src/js/init.js -o app/bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FelipeJunOhira/rogue_like_game.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FelipeJunOhira/rogue_like_game/issues"
  },
  "homepage": "https://github.com/FelipeJunOhira/rogue_like_game#readme",
  "devDependencies": {
    "browserify": "12.0.1",
    "jade": "1.11.0",
    "watchify": "3.6.1",
    "webpack": "1.12.9"
  },
  "dependencies": {
    "jquery": "2.1.4",
    "underscore": "1.8.3"
  }
}
